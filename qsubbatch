#!/bin/bash

QSUBDIR=.qsub
CFL=0.1
NX=300
TOL=1e-10
SERIALNUMBER=4

for SWEEPS in 1 2 4 8 16 32
do
    qsub -cwd -o $QSUBDIR -e $QSUBDIR launcher --tag=sweeps --tag=production --reason="Production run with changing sweeps and sweeps=$SWEEPS" --totalSteps=100000000000 --CFL=$CFL --Nx=$NX --sweeps=$SWEEPS --tol=$TOL --tag=qsub --tag=serialnumber$SERIALNUMBER
#    qsub -cwd -o $QSUBDIR -e qsubout launcher --tag=test --reason="Testing having the qsub jobs use a temp file for the datafile during the simulation." --totalSteps=1
done